/bit.ly/StratifiedEmployeeDataset\n","# ---\n","# Hint: Perform EDA first\n","# ---\n","#\n","df_employee = pd.read_excel(\"employee dataset.xls\", error_bad_lines=False, encoding=\"ISO-8859-1\")\n","\n","strat_emp = df_employee.groupby('Gender', group_keys=False).apply(lambda grouped_subset : grouped_subset.sample(frac=0.1))\n","print(f\"Gender Count\\n{strat_emp['Gender'].value_counts()}\")\n","print(strat_emp)"],"execution_count":21,"outputs":[{"output_type":"stream","text":["Gender Count\n","Male      5\n","Female    4\n","Name: Gender, dtype: int64\n","   Employee  Gender       Time Strata\n","39    Em040  Female  Part-time     FP\n","74    Em075  Female  Part-time     FP\n","96    Em097  Female  Full-time     FF\n","28    Em029  Female  Full-time     FF\n","65    Em066    Male  Full-time     MF\n","17    Em018    Male  Full-time     MF\n","15    Em016    Male  Part-time     MP\n","54    Em055    Male  Full-time     MF\n","0     Em001    Male  Full-time     MF\n"],"name":"stdout"}]}]}